{
	"dockerComposeFile": [
		"${localWorkspaceFolder}/.devcontainer/docker_compose.yaml"
	],
	"service": "devcontainer",
	"name": "${localWorkspaceFolderBasename}",
	"initializeCommand": "python3 .devcontainer/init_funcs.py ${localWorkspaceFolder}",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.codeActionsOnSave": {
					"source.organizeImports": true,
				},
				"editor.bracketPairColorization.enabled": true,
				"editor.guides.bracketPairs": "active",
				"editor.formatOnSave": true,
				"files.autoSave": "afterDelay",
				"files.exclude": {
					"**/.git": true,
					"**/.svn": true,
					"**/.hg": true,
					"**/CVS": true,
					"**/.DS_Store": true,
					"**/Thumbs.db": true,
					"**/__pycache__": true,
					"**/.pytest_cache": true,
					"**/mypy_cache": true
				},
				"files.trimTrailingWhitespace": true,
				"python.defaultInterpreterPath": "/usr/local/bin/python3",
				"python.linting.enabled": true,
				"python.linting.banditEnabled": true,
				"python.linting.banditPath": "/home/dev/.local/bin/bandit",
				"python.linting.banditArgs": [
					"-c",
					"pyproject.toml"
				],
				"python.linting.pylintEnabled": true,
				"python.linting.pylintPath": "/home/dev/.local/bin/pylint",
				"python.formatting.provider": "black",
				"python.formatting.blackPath": "/home/dev/.local/bin/black",
				"python.testing.pytestEnabled": true,
				"python.testing.pytestPath": "/home/dev/.local/pipx/vervs/poetry/bin/pytest",
				"python.testing.pytestArgs": [
					"-m not slow"
				]
			},
			"extensions": [
				"eamodio.gitlens",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"njpwerner.autodocstring",
				"ritwickdey.liveserver",
				"ryanluker.vscode-coverage-gutters",
				"tamasafe.even-better-toml"
			]
		}
	}
}